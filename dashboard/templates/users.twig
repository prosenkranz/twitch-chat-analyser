{% extends 'layout.twig' %}
{% block content %}

<p><a href="{{ path('index') }}"><i class="fa fa-long-arrow-left"></i> Back to overview</a></p>

<h2>User leaderboard</h2>

<table class="table table-dark table-striped table-hover">
	<thead>
		<tr>
			<th width="60px" align="right">Rank</th>
			<th>User</th>
			<th>Messages</th>
		</tr>
	</thead>
	<tbody>
	{% for user in users %}
		<tr>
			<td align="right">{{ loop.index }}.</td>
			<td><a href="{{ path('user', { username: user.username }) }}">{{ user.username }}</a></td>
			<td>{{ user.total_messages }}</td>
		</tr>
	{% endfor %}
	</tbody>
</table>

{% endblock %}
